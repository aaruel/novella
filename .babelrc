{
  "presets": [
    "env",
    "es2017",
    "react",
    "stage-1"
  ],
  "plugins": [
    "transform-decorators-legacy",
    "react-hot-loader/babel",
    "babel-plugin-root-import"
  ],
  "env": {
    "production": {
      "plugins": [
        ["transform-react-remove-prop-types",
          {
            "ignoreFilenames": ["node_modules"]
          }
        ]
      ]
    }
  }
}