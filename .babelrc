{
  "presets": [
    "env",
    ["es2015", {
      "es2015": {
        "loose": true,
        "modules": false
      }
    }],
    "react",
    "stage-1"
  ],
  "plugins": ["transform-decorators-legacy", "react-hot-loader/babel"],
  "env": {
    "production": {
      "plugins": [
        ["transform-react-remove-prop-types",
          {
            "ignoreFilenames": ["node_modules"]
          }
        ]
      ]
    }
  }
}